<main>
    <div class="first-section">
        <div class="row row-cols-1 row-cols-md-5 mb-5 text-center card-container">
            <% products.forEach(product => { %>
                <div class="card product-card">
                    <img src="/images/products/<%= product.img_url %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text">$<%= product.price %></p>
                        <a href="/products/<%= product.product_id %>" class="btn btn-outline-secondary">Ver detalle</a>
                    </div>
                </div>
                <% }) %>git 

    </div>
    
