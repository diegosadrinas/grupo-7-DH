<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('../partials/head')%>
    <link rel="stylesheet" href="/css/creacionProductos.css">
    <title>Creacion Productos</title>
</head>
<body>
<header>
    <%-include('../partials/header')%>
</header>
<main>

  
        
        <div class="prodCreate">
                <div>
                    <h2>Estás editando * <%= product.name %> *</h2>
                </div>
                <div>
                        <p> * * * * * </p>
                        <p> <%= product.name %></p>
                        <p> <%= product.description %></p><br>
                        <p> * * * * * </p>
                        <img class="img" src="/images/products/<%= product.img_url %>" alt="banner">
                        <p> * * * * * </p>                        
                        <p> <%= product.category %></p>
                        <p> <%= product.color %></p>
                        <p>$ <%= product.price %></p>
                    </p>
                    <!-- !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! -->
            </div>
            <form action="/products/edit/<%= product.id %>?_method=PATCH" method="POST" enctype="multipart/form-data" class="formulario">
                <section class="izquierda">
                <div>
                    <label for="name" class="form-label">Nombre del producto:</label>
                    <input type="text" id="name" name="name" value="<%= product.name %>" class="form-input">
                    <span class="span-name"></span>
                </div>
                <div>
                    <label for="description" class="form-label">Descipción:</label>
                    <input name="description" id="description" value="<%= product.description %>" class="form-input"></textarea>
                    <span class="span-description"></span>
                </div>
                <div>
                    <label for="colors" class="form-label">Colores:</label>
                    <select name="colors" id="colors" class="form-input">
                        <option value="Negro">Negro</option>
                        <option value="Blanco">Blanco</option>
                    </select>
                </div>
                <div>
                    <label for="price" class="form-label">Precio del producto:</label>
                    <input type="number" id="price" name="price" value="<%= product.price %>" class="form-input">
                </div>
                <div>
                    <label for="category" class="form-label">Categoría:</label>
                    <select name="category" id="category" class="form-input">
                        <option value="">Elegí</option>
                        <option value="Escritorio">Escritorio</option>
                        <option value="Accesorios">Accesorios</option>
                    </select>
                </div>
                </section>
                <section class="derecha">
                    <label for="image" class="form-label btn">Upload Image</label>
                    <input type="file" name="image" id="image" class="btn">
                </section>
                <div>
                    <button type="submit" class="btn">Guardar producto</button>
                </div>
                <form action="/products/<%= product.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn">Eliminar</button>
                </form>
            </form>
        </div>
    </main>

<footer>
    <%-include('../partials/footer')%>
</footer>
</body>
</html>