<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('../partials/head')%>
    <link rel="stylesheet" href="/css/creacionProductos.css">
    <title>Creacion Productos</title>
</head>
<body>
<header>
    <%-include('../partials/header')%>
</header>
<main>
    <div class="container-fluid prodedit pb-5">
        <h2>Estás editando * <%= product.name %> *</h2>
            <div class="row card-group">
                <div class="col-sm-6">
                  <div class="card h-100">
                    <div class="card-body">
                        <div class="row justify-content-md-center">
                            <div class="col-6">
                                <img class="img-fluid" src="/images/products/<%= product.img_url %>" alt="banner">
                            </div>
                        </div>
                        <p> <%= product.description %></p><br>                     
                        <p> <%= product.category %></p>
                        <p> <%= product.color %></p>
                        <p>$ <%= product.price %></p>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="card h-100">
                    <div class="card-body">
                        <form action="/products/edit/<%= product.product_id %>?_method=PATCH" method="POST" enctype="multipart/form-data" class="formulario">
                            <section class="izquierda">
                            <div>
                                <label for="name" class="floatingInput">Nombre del producto:</label>
                                <input type="text" id="name" name="name" value="<%= product.name %>" class="form-control">
                                <span class="span-name"></span>
                            </div>
                            <div class="mt-3">
                                <label for="description" class="floatingInput">Descipción:</label>
                                <input name="description" id="description" value="<%= product.description %>" class="form-control" style="height: 100px"></textarea>
                                <span class="span-description"></span>
                            </div>
                            <div class="mt-3">
                                <label for="colors" class="form-floating">Colores:</label>
                                <select name="colors" id="colors" class="form-select">
                                    <option value="Negro">Negro</option>
                                    <option value="Blanco">Blanco</option>
                                </select>
                            </div>
                            <div class="mt-3">
                                <label for="price" class="form-floating">Precio del producto:</label>
                                <input type="number" id="price" name="price" value="<%= product.price %>" class="form-control">
                            </div>
                            <div class="mt-3">
                                <label for="category" class="form-floating">Categoría:</label>
                                <select name="category" id="category" class="form-select">
                                    <option value="">Elegí</option>
                                    <option value="Escritorio">Escritorio</option>
                                    <option value="Accesorios">Accesorios</option>
                                </select>
                            </div>
                            </section>
                            <section class="derecha class="mt-3"">
                                <label for="image" class="form-label btn btn-outline-dark mt-3">Upload Image</label>
                                <input type="file" name="image" id="image" class="btn">
                            </section>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-outline-dark">Guardar producto</button>
                            </div>
                        </form>
                            <form action="/products/delete/<%= product.product_id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-outline-dark mt-3">Eliminar</button>
                            </form>

                    </div>
                  </div>
                </div>
            </div>
    </div>
<footer>
    <%-include('../partials/footer')%>
</footer>
</body>
</html>